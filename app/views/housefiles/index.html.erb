
<table id="files-table" class="table table-hover table-striped">
  <thead>
  <th></th>
  <th>Preview</th>
  <th>Added At</th>
  <th>Last Updated</th>
  </thead>
  <tbody>
  <tr class="nested-fields">
    <% @housefiles.each do |h| %>
        <td>    <%= link_to image_url(h.file.url) do %>
              <% if h.file_content_type = "application/pdf" %>
                  <%= image_tag(h.file.thumb_pdf) if h.file? %>
              <% else %>
                  <%= image_tag(h.file.thumb) if h.file? %>
              <% end %>
          <% end %></td>
        <td><%= h.file_name %></td>
        <td><%= h.created_at %></td>
        <td><%= h.updated_at %></td>
        <td><%= link_to 'Delete', h, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-xs btn-danger' %></td>

        </tr>
    <% end %>
    </tbody>
</table>