<%= simple_form_for([@house, sale],) do |f| %>

<%= f.error_notification %>


  <div class="form-actions">
    <%= f.input :price, as: :string, label: "Sale Price", :min => 0 %><br />
    <%= f.input :saledate, label: "Sale Date", :start_year => (Time.now.year - 40), :end_year => Time.now.year, :include_blank => true %><br />
    <%= f.input :contractprice, label: "Contract Date", :start_year => (Time.now.year - 40), :end_year => Time.now.year, :include_blank => true %><br />
    <%= f.input :dom, as: :string, label: "Days on Market", :min => 0 %><br />
    <%= f.input :concession, as: :text, :input_html => { :rows => 5 } %><br />
        <%= f.input :specialterms, label: "Special Terms", as: :text, :input_html => { :rows => 5} %>
    <%= f.hidden_field :agent_id %><br />
    <div class="row"></div>
    <div class="row">
      <div class="col-lg-6">
        <div class="input-group">
          <span class="input-group-btn">
            <%= link_to_function "Select Agent", 'select_agent_fields()', :class => "btn btn-primary" %>
          </span>
          <input type="text" class="form-control" id="agent_attributes_name" readonly value='<%= @agentname %>'>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
    </div>
    <br /><br />
    <%= render('layouts/agent_fields', :f => f) %>
    <%= f.submit "Save Sale Information", :class => "btn btn-primary" %>
    
</div>

<% end %>
