<h1>Search Results</h1>

<%= form_tag houses_show_multiple_path, :method => 'get' do %>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
   	  <th><%= sort_link(@search, :address, "Address") %></th>
      <th><%= sort_link(@search, :city, "City") %></th>
      <th><%= sort_link(@search, :state, "State") %></th>
      <th><%= sort_link(@search, :zipcode, "Zip Code") %></th>
      <th><%= sort_link(@search, :county, "County") %></th>
      <th><%= sort_link(@search, :status, "Status") %></th>
      <th><%= sort_link(@search, :lotsize, "Lot Size") %></th>
      <th><%= sort_link(@search, :squarefeet, "Square Feet") %></th>
      <th><%= sort_link(@search, :bedrooms, "Bedroom") %></th>
      <th><%= sort_link(@search, :bathrooms, "Bathrooms") %></th>
      <th><%= sort_link(@search, :style, "Style") %></th>
      <th><%= sort_link(@search, :year, "Year") %></th>
    </tr>
  </thead>
  <tbody>

<% @houses.each do |house| %>
	<tr>
	<td><%= check_box_tag "house_ids[]", house.id %></td>
    <td><%= house.address %></td>
	<td><%= house.city %></td>
    <td><%= house.state %></td>
    <td><%= house.zipcode %></td>
    <td><%= house.county %></td>
    <td><%= house.status %></td>
    <td><%= number_with_delimiter(house.lotsize) %></td>
    <td><%= number_with_delimiter(house.squarefeet) %></td>
    <td><%= house.bedrooms %></td>
    <td><%= house.bathrooms %></td>
   	<td><%= house.style %></td>
   	<td><%= house.year %></td>
    <td>	
    	<%= link_to 'Show', house, :class => 'btn btn-mini btn-primary' %>
    	<%= link_to 'Edit', edit_house_path(house), :class => 'btn btn-mini'%>
    	<%= link_to 'Destroy', house, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
  	</td>
  </tr>
<% end %>
  </tbody>
</table>

<div class="form-actions">
	<%= submit_tag "Edit Checked", :class => 'btn btn-primary' %>
	
<% end %>

<%= link_to 'Back to Search', houses_search_path, :class => 'btn btn-inverse' %>
</div>
<br />