
<table id="files-table" class="table table-hover table-striped">
	<thead>
		<th></th>
		<th>File Name</th>
		<th>Added At</th>
		<th>Last Updated</th>
	</thead>
	<tbody>	
<tr class="nested-fields">
	<% @housefiles.each do |h| %>
  <td><%= image_tag(h.file.url) if h.file? %></td>
    <td><%= h.file_file_name %></td>
    <td><%= h.created_at %></td>
    <td><%= h.updated_at %></td>
<td><%= link_to 'Destroy', h, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-xs btn-danger' %></td>

    </tr>
      <% end %>
     </tbody>
    </table>


